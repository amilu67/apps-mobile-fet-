{
  "rules": {
    "sostituzioni": {
      ".read": true,
      ".write": true,
      "$sostituzioneId": {
        ".validate": "!newData.exists() || newData.hasChildren(['data', 'classe', 'ora_inizio', 'ora_fine'])"
      }
    },
    "classi_assenti": {
      ".read": true,
      ".write": true,
      "$date": {
        ".validate": "!newData.exists() || newData.hasChildren(['classi', 'timestamp'])"
      }
    },
    "orario": {
      ".read": true,
      ".write": true
    }
  }
}
